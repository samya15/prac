#include <stdio.h>
#include <windows.h>
#include<MMsystem.h>

void ChatBot(char choice[])
{

    if(choice=="MainMenu")
    {
        printf("\n1.----------------------Open Guide--------------------------");
        printf("\n2.-------------------Ask me a question----------------------\n");
        fflush(stdin);
        int ch;
        printf("Enter your choice: ");
        scanf("%d",ch);
        if(ch==1)
        {
            printf("hi");
            ChatBot("Guide");
        }
        else if(ch==2)
        {
            printf("Enter your question: ");
            char question[500];
            fflush(stdin);
            //scanf("%s")
        }
        else
        {
            printf("Wrong choice!! Enter only the numbers indicated against the choices.\n");
            ChatBot("MainMenu");
        }
    }
    else if(choice=="Guide")
    {
        FILE *fp;
        fp=fopen("Guide.txt","r");
        char guide_data[1000];
        while(fscanf(fp,"%s",guide_data)!=EOF)
            printf("%s\n",guide_data);
        fclose(fp);
    }
}




int main()
{
    ChatBot("MainMenu");
    return 0;
}
