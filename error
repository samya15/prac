#include <stdio.h>
//Selection Sort
int main()
{
    int a[]={12,45,23,51,19,8};
    int n=sizeof(a)/sizeof(a[0]);
    int i, j, k, s_num, cup, index;
    for(j=0;j<=(n-2);j++)
    {
        i=j;
        for(i;i<=(n-2);i++)
        {
            if(a[i]<a[i+1])
                s_num=a[i];
            else
                s_num=a[i+1];
        }
        for(k=0;k<=(n-1);k++)
        {
            if(a[k]==s_num)
                index=k;
        }
        cup=a[j];
        a[j]=s_num;
        a[index]=cup;
    }
    int q;
    for(q=0;q<=(n-1);q++)
        printf("%d\n",a[q]);
    return 0;
}
